{{>head}}
<section id="province" class="bg-dark p-5">
    <div class="container">
        <div class="d-flex justify-content-between mb-5">
            <div>
                <h2 class="text-center text-white">Provinsi & Kabupaten</h2>
            </div>
            <div>
                <a href="/province/add" class="btn btn-gradient">Tambah Provinsi</a>
                <a href="/district/add" class="btn btn-gradient">Tambah Kabupaten</a>
            </div>
        </div>
        <div class="row g-4 justify-content-center">
        {{#each provinsi}}
            <div class="col-md-6 col-lg-3">
                <div class="d-flex justify-content-around">
                    <a class="text-white" href="/province/edit/{{this.id}}">Edit <i class="bi bi-brush-fill me-5"></i></a>
                    <a class="text-white" href="/province/delete/{{this.id}}">Delete <i class="bi bi-trash-fill"></i></a>
                </div>
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <img class="mb-3 img-fluid image" src="/uploads/{{this.photo}}" alt="{{this.photo}}">
                        <h3 class="card-title mb-3">{{this.nama}}</h3>
                        <p class="card-text">{{this.diresmikan}}</p>
                    </div>
                </div>
                <div class="my-2 text-center">
                    <a href="/province/{{this.id}}" class="btn detail-btn px-5">Details</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{>footer}}